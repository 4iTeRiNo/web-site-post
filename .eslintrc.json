{
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true,
			"useJSXTextNode": true
		},
		"ecmaVersion": 2020,
		"sourceType": "module",
		"project": "./tsconfig.json"
	},
	"extends": ["next/core-web-vitals", "plugin:@typescript-eslint/recommended"],
	"ignorePatterns": ["*.scss", "*.css", "*.png", "*.jpg", "*.jpeg", "*.svg"],
	"plugins": ["@typescript-eslint"],
	"env": {
		"node": true,
		"browser": true,
		"es6": true
	},
	"globals": {
		"React": "readonly"
	},
	"rules": {
		"import/extensions": [
			"error",
			"ignorePackages",
			{
				"js": "never",
				"jsx": "never",
				"ts": "never",
				"tsx": "never"
			}
		],
		"no-unused-vars": "warn",
		"@typescript-eslint/no-unused-vars": "warn"
	}
}
